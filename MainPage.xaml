<UserControl x:Class="TouchScreenComicViewer.MainPage"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		mc:Ignorable="d"
		d:DesignHeight="400" d:DesignWidth="400">

		<Grid x:Name="LayoutRoot" Background="White" RenderTransformOrigin="0 0">
		<Grid.RenderTransform>
			<ScaleTransform x:Name="PageScale" ScaleX="1" ScaleY="1"/>
		</Grid.RenderTransform>
		<Image Name="MainDisplayImage" HorizontalAlignment="Center" VerticalAlignment="Top" Visibility="Visible" />
		<Button Content="Open Images..." Height="73" Margin="17,89,0,0" Name="button1" Width="183" VerticalAlignment="Center" HorizontalAlignment="Center" Click="button1_Click" />
		<Button Content="Full Screen" Height="29" HorizontalAlignment="Left" Margin="-1,-1,0,0" Name="button2" VerticalAlignment="Top" Width="181" Click="button2_Click" />
	</Grid>
</UserControl>
