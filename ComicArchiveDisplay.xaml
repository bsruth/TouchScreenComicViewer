<UserControl x:Class="TouchScreenComicViewer.ComicArchiveDisplay"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:Comics="clr-namespace:TouchScreenComicViewer"
		mc:Ignorable="d"
		d:DesignHeight="300" d:DesignWidth="400" Name="ComicArchiveDisplayPage" Loaded="ComicArchiveDisplayPage_Loaded">
		
		<Grid x:Name="LayoutRoot" Background="Black">
			<Grid.ColumnDefinitions>
			<ColumnDefinition Width="200*" />
		</Grid.ColumnDefinitions>
		<ListBox MinHeight="276" Background="Black" Foreground="White" HorizontalAlignment="Stretch" Margin="12,12,12,12" Name="ComicArchiveListBox" VerticalAlignment="Top">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<StackPanel Orientation="Horizontal" Height="50" HorizontalAlignment="Stretch" Background="Transparent" MouseLeftButtonUp="TextBlock_MouseLeftButtonUp">
						<Image Source="{Binding ItemBMP}" Height ="48" HorizontalAlignment="Left"/>
						<TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Text="{Binding ItemText}" ></TextBlock>
					</StackPanel>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
	</Grid>
</UserControl>
