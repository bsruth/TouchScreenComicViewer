<UserControl x:Class="TouchScreenComicViewer.ComicArchiveDisplay"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:TSComicV="clr-namespace:TouchScreenComicViewer"
		mc:Ignorable="d"
		d:DesignHeight="300" d:DesignWidth="400" Name="ComicArchiveDisplayPage" Loaded="ComicArchiveDisplayPage_Loaded">
		
		<Grid x:Name="LayoutRoot" Background="Black">
			<Grid.ColumnDefinitions>
			<ColumnDefinition Width="200*" />
		</Grid.ColumnDefinitions>
		<ListBox  Background="Black" Foreground="White" Margin="12,12,12,49" Name="ComicArchiveListBox">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<StackPanel Orientation="Horizontal" Height="50" HorizontalAlignment="Stretch" Background="Transparent" MouseLeftButtonUp="TextBlock_MouseLeftButtonUp">
						<Image Source="{Binding ItemBMP}" Height ="48" HorizontalAlignment="Left"/>
						<TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Text="{Binding ItemText}" ></TextBlock>
					</StackPanel>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
		<Button Content="Add Comics..." Height="31" Name="openComicBtn" Margin="12,0,0,11" VerticalAlignment="Bottom" Click="OpenComicBtn_Click" HorizontalAlignment="Left" Width="110" />
		<TSComicV:MainPage x:Name="ComicViewer" Visibility="Collapsed"/>
	</Grid>
</UserControl>
