<UserControl x:Class="TouchScreenComicViewer.ComicViewingMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
						 xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
    mc:Ignorable="d"
    d:DesignWidth="400">
    
    <Grid x:Name="LayoutRoot" Background="Transparent" MouseLeftButtonUp="ComicViewingMenu_MouseLeftButtonUp" Width="Auto" Height="Auto">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<Grid Grid.Row="0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>
			<sdk:Label Grid.Column="0" HorizontalAlignment="Right" Name="currentPageNumLbl" VerticalAlignment="Bottom" Height="15" Width="33" Foreground="Black" HorizontalContentAlignment="Right" Background="#9DE5E5E5" Margin="0,0,2,0" />
			<sdk:Label Grid.Column="1" HorizontalAlignment="Left" Margin="2,0,0,0" Name="totalPagesLbl" VerticalAlignment="Bottom" Height="15" Width="35" Foreground="Black" DataContext="{Binding}" Background="#9DE5E5E5" />
		</Grid>
		<Grid Grid.Row="1" Name="expandedMenu" Visibility="Collapsed">
			<Button Style="{StaticResource WP7Button}" Height="35" Content="Close Comic" HorizontalAlignment="Stretch" Margin="20"/>
		</Grid>
	</Grid>
</UserControl>
